package assignment;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.FindBy;

public class SearsOnlineInstore {
	@FindBy(id="yourAccount")
	WebElement SignIn;
	@FindBy(xpath=".//*[@id='subnavDD_myProfile']/li[12]/button")
	WebElement JoinFree;
	public void SignInAccounts(FirefoxDriver driver)
	{
		Actions act =new Actions(driver);
		act.moveToElement().perform();
		JoinFree.click();
		
		
	}
	@FindBy(id="email")
	WebElement Email;
	@FindBy(id="emailConfirm")
	WebElement ConfirmEmail;
	@FindBy(id="password")
	WebElement CreatePassword;
	@FindBy(xpath=".//*[@id='universalSignInBtns']/button[1]")
	WebElement Join;
	public void JoinForFree(String email,String cemail,String pwd)
	{
		Email.sendKeys(email);
		ConfirmEmail.sendKeys(cemail);
		CreatePassword.sendKeys(pwd);
		Join.click();
	}

}
